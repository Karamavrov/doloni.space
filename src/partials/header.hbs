<!DOCTYPE html>
<html lang="{{lang}}">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="{{description}}" />
        {{#if (eq lang 'uk')}}
        <!-- SEO Keywords for Ukrainian -->
        <meta
            name="keywords"
            content="масаж, масаж Ірпінь, масажний салон Ірпінь, масаж Ірпень, масажний кабінет Ірпінь, релакс масаж, масаж спини, Doloni масаж, запис на масаж Ірпінь"
        />
        {{else}}
        <!-- SEO Keywords for English -->
        <meta
            name="keywords"
            content="massage, massage Irpin, massage salon Irpin, massage space Irpin, relaxation massage, Doloni, book massage Irpin, massage appointment Irpin"
        />
        {{/if}}

        <!-- Open Graph -->
        <meta property="og:title" content="{{title}}" />
        <meta property="og:description" content="{{description}}" />
        <meta property="og:url" content="{{canonical}}" />
        <meta property="og:type" content="website" />
        {{#if (eq lang 'uk')}}
        <meta property="og:locale" content="uk_UA" />
        <meta property="og:site_name" content="Doloni • Масаж Ірпінь - Масажний простір" />
        {{else}}
        <meta property="og:locale" content="en_US" />
        <meta property="og:site_name" content="Doloni • Massage Irpin - Massage Space" />
        {{/if}}

        <!-- Canonical -->
        <link rel="canonical" href="{{canonical}}" />

        <!-- Favicon -->
        <link rel="icon" type="image/png" href="/images/favicon.svg" />

        <title>{{title}}</title>

        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />

        <!-- Custom CSS -->
        <link rel="stylesheet" href="/css/custom.css" />
        <!-- Meta Pixel Code -->
        <script>
            !(function (f, b, e, v, n, t, s) {
                if (f.fbq) return;
                n = f.fbq = function () {
                    n.callMethod ? n.callMethod.apply(n, arguments) : n.queue.push(arguments);
                };
                if (!f._fbq) f._fbq = n;
                n.push = n;
                n.loaded = !0;
                n.version = "2.0";
                n.queue = [];
                t = b.createElement(e);
                t.async = !0;
                t.src = v;
                s = b.getElementsByTagName(e)[0];
                s.parentNode.insertBefore(t, s);
            })(window, document, "script", "https://connect.facebook.net/en_US/fbevents.js");
            fbq("init", "1482653163364025");
            fbq("track", "PageView");
        </script>
        <!-- End Meta Pixel Code -->
    </head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KBN3PHMVRQ"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() {
            dataLayer.push(arguments);
        }
        gtag("js", new Date());

        gtag("config", "G-KBN3PHMVRQ");
    </script>

    <!-- Altegio widget -->
    <script type="text/javascript" src="https://w1383375.alteg.io/widgetJS" charset="UTF-8"></script>
    <body>
        <noscript>
            <img
                height="1"
                width="1"
                style="display: none"
                src="https://www.facebook.com/tr?id=1482653163364025&ev=PageView&noscript=1"
            />
        </noscript>
        <header class="site-header py-3 print-hide">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <a
                        href="{{#if (eq lang 'en')}}/en/{{else}}/{{/if}}"
                        class="text-decoration-none d-flex align-items-center gap-2"
                    >
                        <img src="/images/doloni_logo_header.svg" alt="Doloni" class="site-logo" />
                    </a>
                    <nav class="d-flex align-items-center gap-3">
                        <!-- Language Switcher -->
                        <div class="lang-switcher">
                            {{#if (eq lang 'uk')}}
                            <span class="fw-bold">UA</span>
                            <span>|</span>
                            <a
                                href="{{#if (eq currentPage 'home')}}/en/{{else}}/en/{{currentPage}}{{/if}}"
                                class="text-decoration-none"
                            >
                                EN
                            </a>
                            {{else}}
                            <a
                                href="{{#if (eq currentPage 'home')}}/{{else}}/{{currentPage}}{{/if}}"
                                class="text-decoration-none"
                            >
                                UA
                            </a>
                            <span>|</span>
                            <span class="fw-bold">EN</span>
                            {{/if}}
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </body>
</html>
